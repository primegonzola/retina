{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "."
    // ** base url will expain why it is useful later **
  },
  "include": [
    "./**/*.ts",
    "./server/main.ts"
  ],
  "exclude": [
    "node_modules",
    "./**/*.spec.ts",
    "./**/__tests__/*.ts"
  ]
}